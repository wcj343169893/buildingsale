				</value>
				<value>
					com/zuxia/buildingsale/entity/DealInfo.hbm.xml
				</value>
				<value>
					com/zuxia/buildingsale/entity/EmpRole.hbm.xml
				</value>
				<value>
					com/zuxia/buildingsale/entity/Employee.hbm.xml
				</value>
				<value>
					com/zuxia/buildingsale/entity/RoleInfo.hbm.xml
				</value>
