<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.zuxia.buildingsale.sys.entity.EmpRole" table="emp_role" catalog="loupan">
        <id name="mrId" type="java.lang.Integer">
            <column name="mr_id" />
            <generator class="native" />
        </id>
        <many-to-one name="roleInfo" class="com.zuxia.buildingsale.sys.entity.RoleInfo" fetch="select" lazy="false">
            <column name="role_id" not-null="true" unique="true">
                <comment>角色编号</comment>
            </column>
        </many-to-one>
        <many-to-one name="employee" class="com.zuxia.buildingsale.sys.entity.Employee" fetch="select" lazy="false">
            <column name="emp_id" not-null="true" unique="true">
                <comment>员工编号</comment>
            </column>
        </many-to-one>
    </class>
</hibernate-mapping>
